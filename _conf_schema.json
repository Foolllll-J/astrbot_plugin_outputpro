{
    "intercept_error": {
        "description": "拦截报错",
        "type": "bool",
        "hint": "注意关闭时仅bot管理员能接收报错，其他人是永久拦截报错的",
        "default": true
    },
    "error_keywords": {
        "description": "需要拦截的关键字列表",
        "hint": "消息内容中包含列表中任一关键字时，消息将被拦截",
        "type": "list",
        "default": [
            "请求失败",
            "出现异常",
            "抱歉",
            "您好",
            "请稍后",
            "隐私政策"
        ]
    },
    "clean_config": {
        "description": "文本清理配置",
        "type": "object",
        "hint": "",
        "items": {
            "clean_text_length": {
                "description": "文本清理长度阈值",
                "type": "int",
                "hint": "多少个字符以下时执行文本清理，可以防止对长文本误清理",
                "default": 150
            },
            "clean_emoji": {
                "description": "清理emoji",
                "type": "bool",
                "hint": "清理文本中的emoji，对喜欢发emoji的模型有奇效（比如智谱）",
                "default": true
            },
            "remove_lead": {
                "type": "list",
                "description": "去除指定句首字符",
                "hint": "对某些喜欢输出前缀的模型有奇效，注意只去除句首字符",
                "default": [
                    "print",
                    ":",
                    "："
                ]
            },
            "remove_tail": {
                "type": "list",
                "description": "去除指定句尾字符",
                "hint": "对某些喜欢输出句号的模型有奇效，注意只去除句尾字符",
                "default": [
                    "。",
                    "."
                ]
            },
            "clean_punctuation": {
                "type": "string",
                "description": "需要清理的特殊符号",
                "hint": "填写正则表达式，例如：[#%~], 注意是整句清洗",
                "default": "[#%~]"
            }
        }
    },
    "reply_prob": {
        "description": "引用回复概率",
        "type": "float",
        "hint": "当回复消息中包含文本时，按概率引用回复。 请提前关闭Astrbot自动的Reply功能",
        "default": 0.1
    },
    "at_prob": {
        "description": "@发送者概率",
        "type": "float",
        "hint": "当消息中包含文本时，按概率@发送者。, 请提前关闭Astrbot自动的At功能",
        "default": 0.001
    },
    "enable_at_str": {
        "description": "换用字符串@发送者",
        "type": "bool",
        "hint": "Astrbot在拼接At与Plain组件时，中间的空格会消失，不介意的话可以换用字符串At来解决此问题",
        "default": true
    }
}